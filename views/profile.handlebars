{{#if posts}}
<div class="total">
  <h4>
    <span id="currentlevel"></span>
    <br>
    <span id="totaldistance"></span>
    <br>
    <span id="totaltime"></span>
    <br>
  </h4>
  <div>
  <canvas id="expDonut"></canvas>
  </div>
</div>
    <br>
    <span id="lastrun"></span>
    <br>
{{/if}}

<div>
  <canvas class="bg-white" id="personalChart"></canvas>
</div>

<br>
<div class="new-post">
    <a href="/newpost" class="btn"> + New Post </a>
</div>

<div class="d-flex flex-row">
{{#each posts as |post| }}
  <div class="content-edit2 p-2 box{{post.id}} custombox" data-id="{{post.id}}" date-id="{{post.createdAt}}">
    <div class="head">
        <h4>
        <a href="/post/edit/{{post.id}}">{{post.runName}}</a>
        </h4>
    </div>
        <div id="aboutRun">
        <b>Posted:</b>
        <br>
        <p>{{post.body}}</p>
          <div id="time{{post.id}}" data-id="{{post.time}}">{{millisToMinutesAndSeconds post.time}} min:sec
          </div> 
          <div id="distance{{post.id}}" data-id="{{post.distance}}"> 
           <b>{{post.distance}}km</b> 
          </div>
          <div id="minPerKm"> 
            <b>{{minPerKm  post.time post.distance }}min/km</b>
          </div>
    </div>
  </div>
{{/each}}
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="./js/personalstats.js"></script>