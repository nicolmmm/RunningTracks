{{#each posts as |post| }}
<div class="box">
  <div class="head">
    <h4>
      <a href="/post/{{post.id}}">{{post.runName}}</a>
    </h2>
    <p>Posted by {{post.user.userName}} </p>
  </div>
  <div class="content">
      <p>
      <div id="aboutRun">
      <b>About</b>
      </br>{{post.body}}</div>

       <div id="time">{{millisToMinutesAndSeconds post.time}}min </div> 
       <div id="distance"> <b>{{post.distance}}km</b> </div>
    </p>
  </div>
</div>
{{/each}}
