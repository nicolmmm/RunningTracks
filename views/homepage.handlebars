<div>
  <canvas id="distanceChart"></canvas>
</div>

{{#each posts as |post| }}
<div class="box{{post.id}}" data-id="{{post.id}}">
  <div class="head">
    <h4>
      <a href="/post/{{post.id}}">{{post.runName}}</a>
    </h2>
    <p class="user{{post.id}}" data-id="{{post.user.userName}}">Posted by {{post.user.userName}} </p>
  </div>
  <div class="content{{post.id}}" data-id="{{post.distance}}">
      <p>
      <div id="aboutRun">
      <b>About</b>
      </br>{{post.body}}</div>

       <div id="time">{{millisToMinutesAndSeconds post.time}}min </div> 
       <div id="distance"> <b>{{post.distance}}km</b> </div>
       <div id="minPerKm"> <b>{{minPerKm  post.time post.distance }}min/km</b> </div>
    </p>
  </div>
</div>
{{/each}}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="./js/distancechart.js"></script>